<h1>タスク一覧</h1>
<% if @tasks.any? %>
  <table class="table">
    <thead>
      <tr>
         <th>ID</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    
  <tbody>

   <% @tasks.each do |x| %>
    
    <tr>
      <td><%= link_to x.id, x %></td>
       <td><%= x.status%></td>
      <td><%= x.content %></td>
    </tr>
   
   <% end %>
   
  </tbody>
  
  </table>
  

  
<% end %>
<%= link_to '新規タスク作成', new_task_path, class: "btn btn-primary" %>